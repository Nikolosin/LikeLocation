<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_avatar_48"
            tools:srcCompat="@drawable/icon_avatar_48" />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="29 august 2021!"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nikolay Petrenko"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/date"
            app:layout_constraintStart_toStartOf="@id/date"
            app:layout_constraintTop_toBottomOf="@id/date" />

        <TextView
            android:id="@+id/textPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text vghjklljkhghcvbnm,m,nbmv"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <TextView
            android:id="@+id/itemShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="10"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPost" />

        <ImageButton
            android:id="@+id/buttonShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toStartOf="@id/itemShare"
            app:layout_constraintTop_toTopOf="@id/itemShare" />

        <ImageButton
            android:id="@+id/buttonComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_comment_24"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/buttonShare"
            app:layout_constraintTop_toTopOf="@id/itemShare" />

        <TextView
            android:id="@+id/itemComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/buttonComment"
            app:layout_constraintTop_toTopOf="@id/itemShare" />

        <ImageButton
            android:id="@+id/buttonLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/buttonComment"
            app:layout_constraintTop_toTopOf="@id/itemShare"
            />

        <TextView
            android:id="@+id/itemLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/buttonLike"
            app:layout_constraintTop_toTopOf="@id/itemShare" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/post">

        <ImageView
            android:id="@+id/imageNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_avatar_48"
            tools:srcCompat="@drawable/icon_avatar_48" />
        <TextView
            android:id="@+id/dateNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="29 august 2021!"
            android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@id/imageNew"
            app:layout_constraintTop_toTopOf="@id/imageNew" />

        <TextView
            android:id="@+id/nameNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nikolay Petrenko"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/dateNew"
            app:layout_constraintStart_toStartOf="@id/dateNew"
            app:layout_constraintTop_toBottomOf="@id/dateNew" />

        <TextView
            android:id="@+id/textPostNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text vghjklljkhghcvbnm,m,nbmv"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageNew" />

        <ImageView
            android:id="@+id/imageGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/gps"
            app:srcCompat="@drawable/ic_baseline_location_on_24"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Addres"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imageGps"
            app:layout_constraintTop_toBottomOf="@id/textPostNew" />

        <TextView
            android:id="@+id/gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.4322, 13.2345"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imageGps"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <TextView
            android:id="@+id/itemShareNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="10"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/gps" />

        <ImageButton
            android:id="@+id/buttonShareNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintEnd_toStartOf="@id/itemShareNew"
            app:layout_constraintTop_toTopOf="@id/itemShareNew" />

        <ImageButton
            android:id="@+id/buttonCommentNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_comment_24"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/buttonShareNew"
            app:layout_constraintTop_toTopOf="@id/itemShareNew" />

        <TextView
            android:id="@+id/itemCommentNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/buttonCommentNew"
            app:layout_constraintTop_toTopOf="@id/itemShareNew" />

        <ImageButton
            android:id="@+id/buttonLikeNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toStartOf="@id/buttonCommentNew"
            app:layout_constraintTop_toTopOf="@id/itemShareNew"
            />

        <TextView
            android:id="@+id/itemLikeNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/buttonLikeNew"
            app:layout_constraintTop_toTopOf="@id/itemShareNew" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>